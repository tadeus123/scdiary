<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>corner</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <a href="/" class="back-to-diary" aria-label="Back to diary">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M19 12H5M12 19l-7-7 7-7"/>
    </svg>
    <span>back to diary</span>
  </a>
  
  <div class="corner-mindmap">
    <div class="mindmap-header">
      <h1 class="mindmap-title">my goals & dreams</h1>
      <p class="mindmap-subtitle">the vision board of what i aspire to achieve</p>
    </div>
    <div class="mindmap-container">
      <% if (typeof goals === 'undefined' || goals.length === 0) { %>
        <p class="mindmap-empty">No goals yet. Add your goals in the admin panel.</p>
      <% } else { %>
        <% 
          var cols = Math.ceil(Math.sqrt(goals.length));
          var rows = Math.ceil(goals.length / cols);
          goals.forEach((goal, index) => { 
            var col = index % cols;
            var row = Math.floor(index / cols);
            // Add some organic variation to positioning
            var xBase = ((col + 0.5) / cols * 85 + 7.5);
            var yBase = ((row + 0.5) / rows * 80 + 10);
            // Add random offset for more organic feel
            var xOffset = (Math.sin(index * 2.5) * 3);
            var yOffset = (Math.cos(index * 1.8) * 3);
            var x = (xBase + xOffset).toFixed(2);
            var y = (yBase + yOffset).toFixed(2);
            // Add slight rotation for handwritten feel
            var rotation = (Math.sin(index * 1.3) * 3).toFixed(2);
        %>
          <div class="mindmap-goal" style="
            --x: <%= x %>%;
            --y: <%= y %>%;
            --index: <%= index %>;
          ">
            <span class="goal-text" style="transform: rotate(<%= rotation %>deg);"><%= goal.text %></span>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
  <script src="/js/main.js"></script>
</body>
</html>
