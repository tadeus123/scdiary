<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>corner</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="corner-mindmap">
    <div class="mindmap-container">
      <% if (typeof goals === 'undefined' || goals.length === 0) { %>
        <p class="mindmap-empty">No goals yet. Add your goals in the admin panel.</p>
      <% } else { %>
        <% 
          var cols = Math.ceil(Math.sqrt(goals.length * 1.8));
          var rows = Math.ceil(goals.length / cols);
          var xSpacing = 70 / Math.max(cols, 1);
          var ySpacing = 60 / Math.max(rows, 1);
          goals.forEach((goal, index) => { 
            var col = index % cols;
            var row = Math.floor(index / cols);
            var rotation = (Math.random() * 2 - 1).toFixed(2);
            var x = (15 + col * xSpacing).toFixed(2);
            var y = (20 + row * ySpacing).toFixed(2);
            var delay = (index * 0.1).toFixed(1);
        %>
          <div class="mindmap-goal" style="
            --rotation: <%= rotation %>deg;
            --x: <%= x %>%;
            --y: <%= y %>%;
            --delay: <%= delay %>s;
          ">
            <span class="goal-text"><%= goal.text %></span>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
  <script src="/js/main.js"></script>
</body>
</html>
